<div class="row">
  <div class="col-md-7 banner">
    <h1><span class="text-red">ค้นหา</span> & <span class="text-blue">จองที่พักสำหรับทริปคุณ!</span></h1>
  </div>
</div>

<%= form_tag search_path, method: :get do %>
 <div class="col-sm-12">
<div class="row">
  <div class="col-sm-7 five-three">
    <div class="row">
      <div class="col-sm-4">
         <%= text_field_tag :search, params[:search], placeholder: "ต้องการเดินทางไป..", class: "form-control", id: "autolocation" %>
      </div>
      <div class="col-sm-4">
         <%= text_field_tag :start_date, params[:start_date], placeholder: "Check in", class: "form-control datepicker" %>
      </div>
      <div class="col-sm-4">
         <%= text_field_tag :end_date, params[:end_date], placeholder: "Check out", class: "form-control datepicker" %>
      </div><!-- end inner row -->
    </div>
  </div>
  <div class="col-sm-5 five-two">
    <div class="row">
      <div class="col-sm-6">
         <%= text_field_tag :accommodate, params[:accommodate], placeholder: "จำนวนผู้พัก", class: "form-control" %>
      </div>
      <div class="col-sm-6">
         <%= submit_tag "ค้นหา", class: "btn btn-primary" %>
      </div>
    </div><!-- end inner row -->
  </div>
<% end %>
</div><!-- end outer row -->
</div>

<br/><br/>

<br/><hr/><br/>

<!-- HOMES -->
<div><h3>ที่พัก</h3></div>
<br/>

<div class="row">
  <%= render partial: "rooms/rooms_list", locals: {rooms: @rooms} %>
 
</div>

<!-- CITIES -->
<div><h3>Where to?</h3></div>
<br/>

<div class="row">
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=bangkok">
      <div class="discovery-card" style="background-image: url('/assets/bangkok_staynplay.jpg')"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=huahin">
      <div class="discovery-card" style="background-image: url('/assets/huahin_staynplay.jpg')"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=pattaya">
      <div class="discovery-card" style="background-image: url('/assets/pattaya_staynplay.jpg')"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=hotels">
      <div class="discovery-card" style="background-image: url('/assets/staynplay-swimming.jpg')"></div>
    </a>
  </div>
</div></div>


<script>
  $('#start_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#end_date').datepicker("option", "minDate", selected);
      $('#end_date').attr("disabled", false);
    }
  });

  $('#end_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#start_date').datepicker("option", "maxDate", selected);
    }
  });

  $(function() {
    $("#autolocation").geocomplete();
  })
</script>
