        <%= text_field_tag :end_date, params[:end_date], placeholder: "ถึงวันที่", class: "form-control datepicker" %>
      </div><!-- end inner row -->
    </div>

  
      <div class="row text-center">
         <%= submit_tag "ค้นหา", class: "btn btn-primary" %>
      </div>
    </div><!-- end inner row -->
  </div>
<% end %>  
   
