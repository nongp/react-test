<!--main-->
<div class="main-w3l">
<div class="w3layouts-main">
  <h2>เข้าสู่ระบบ</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="form-group" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'E-Mail';}">
        <%= f.email_field :email, autofocus: true, placeholder: "อีเมล์", class: "form-control" %>
      </div>

       <div class="form-group" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'password';}" >
        <%= f.password_field :password, autocomplete: "off", placeholder: "รหัสผ่าน", class: "form-control" %>
      </div>
         
          <div>
              <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %> จดจำฉันไว้ในระบบ
            <% end %>                  
            <span> <%= link_to "ลืมรหัสผ่าน?", new_user_password_path %>
          </div>
          </span>

        <div class="actions">
        <%= f.submit "เข้าสู่ระบบ", class: "btn btn-normal btn-block" %>
      </div>
    <% end %>

    <%= link_to "ลงชื่อเข้าใช้ด้วย Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>
    </div>
    <!-- <p>ยังไม่มีบัญชี ? <%= link_to "ลงทะเบียนที่นี่", new_user_registration_path, style: "color: white;" %></p>
   -->
</div>
